# ============================================
# STRIPE CONFIGURATION (Real Payments)
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys
# For testing, use test keys (pk_test_... and sk_test_...)
# For production, use live keys (pk_live_... and sk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_STRIPE_SECRET_KEY

# Get webhook secret from: https://dashboard.stripe.com/webhooks
# After creating a webhook endpoint pointing to: https://yourdomain.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_WEBHOOK_SECRET

# ============================================
# MERCADO PAGO CONFIGURATION (Real Payments)
# ============================================
# Get your access token from: https://www.mercadopago.com.mx/developers/panel/credentials
MERCADOPAGO_ACCESS_TOKEN=APP_USR-REPLACE_WITH_YOUR_ACCESS_TOKEN
MERCADOPAGO_PUBLIC_KEY=APP_USR-REPLACE_WITH_YOUR_PUBLIC_KEY

# ============================================
# SUPABASE CONFIGURATION (Database)
# ============================================
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://REPLACE_WITH_YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=REPLACE_WITH_YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_YOUR_SERVICE_ROLE_KEY

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Your production URL (for webhooks and redirects)
# For local development:
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For production on Vercel, change to:
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# ============================================
# SECURITY
# ============================================
# Generate a random secret for JWT tokens
# Use: openssl rand -base64 32
NEXTAUTH_SECRET=REPLACE_WITH_RANDOM_SECRET_GENERATED_BY_OPENSSL

# ============================================
# WHATSAPP BUSINESS (Optional)
# ============================================
WHATSAPP_BUSINESS_NUMBER=5214491234567
WHATSAPP_API_TOKEN=REPLACE_WITH_YOUR_WHATSAPP_TOKEN

# ============================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
